{
	"name": "musicchartsite",
	"description": "A website to create Music Charts",
	"version": "1.5.0",
	"type": "module",
	"private": "true",
	"author": {
		"email": "musicChart@danielTurcich.com",
		"name": "Daniel Turcich",
		"url": "https://danielTurcich.com"
	},
	"engines": {
		"node": ">=24.3.0",
		"pnpm": ">=10.12.4"
	},
	"packageManager": "pnpm@10.12.4",
	"engineStrict": true,
	"scripts": {
		"dev": "vite",
		"dev:phone": "vite --host 8086",
		"build": "pnpm vite-build && pnpm add:cname",
		"build:preview": "vite preview",
		"preview": "pnpm build && pnpm build:preview",
		"checks": "pnpm lint-check && pnpm format-check && pnpm type-check && pnpm test",
		"lint-check": "oxlint && echo lint-check done",
		"format-check": "prettier . --check && echo format-check done",
		"type-check": "vue-tsc --noEmit && echo type-check done",
		"lint-fix": "oxlint --fix",
		"format-fix": "prettier . --write",
		"vite-build": "vite build --emptyOutDir && echo vite-build done",
		"add:cname": "cd dist && echo 'musicchartmaker.com' > CNAME && echo add:cname done",
		"prepare": "husky",
		"test": "vitest run",
		"knip": "knip",
		"analyze": "pnpm dlx vite-bundle-analyzer"
	},
	"dependencies": {
		"@popperjs/core": "^2.11.8",
		"@vueuse/core": "^13.5.0",
		"dialog-polyfill": "^0.5.6",
		"html2canvas": "^1.4.1",
		"marked": "^16.1.1",
		"pako": "^2.1.0",
		"pinia": "^3.0.3",
		"vue": "^3.5.18"
	},
	"devDependencies": {
		"@prettier/plugin-oxc": "^0.0.4",
		"@testing-library/vue": "^8.1.0",
		"@types/node": "^24.1.0",
		"@types/pako": "^2.0.3",
		"@unocss/transformer-directives": "^66.3.3",
		"@vitejs/plugin-vue": "^6.0.0",
		"happy-dom": "^18.0.1",
		"husky": "^9.1.7",
		"knip": "^5.62.0",
		"oxlint": "^1.8.0",
		"prettier": "^3.6.2",
		"rollup-plugin-swc-minify": "^1.3.0",
		"typescript": "^5.8.3",
		"unocss": "^66.3.3",
		"vite": "npm:rolldown-vite@^7.0.11",
		"vitest": "^3.2.4",
		"vue-tsc": "^3.0.4"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@swc/core",
			"esbuild",
			"oxc-resolver"
		]
	}
}
