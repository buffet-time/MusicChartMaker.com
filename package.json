{
	"name": "musicchartsite",
	"description": "A website to create Music Charts",
	"version": "0.5.0",
	"author": {
		"email": "musicChart@danielTurcich.com",
		"name": "Daniel Turcich",
		"url": "https://danielTurcich.com"
	},
	"engines": {
		"node": ">=18.4.0",
		"pnpm": ">=7.0.0"
	},
	"imports": {
		"#root/*": "./*",
		"#src/*": "./src/*",
		"#assets/*": "./src/assets/*",
		"#components/*": "./src/components/*",
		"#types/*": "./src/types/*"
	},
	"scripts": {
		"prepare": "husky install",
		"serve": "vite",
		"serve:phone": "vite --host 8086",
		"lint-fix": "eslint \"**/*.{ts,vue}\" --fix",
		"lint-check": "eslint \"**/*.{ts,vue}\"",
		"format-fix": "prettier --write \"**/**\"",
		"format-check": "prettier --check \"**/**\"",
		"type-check": "vue-tsc --noEmit && echo type-check done",
		"vite-build": "vite build --emptyOutDir && echo vite-build done",
		"add:cname": "cd dist && echo 'musicchartmaker.com' > CNAME && echo add:cname done",
		"build": "pnpm type-check && pnpm vite-build && pnpm add:cname",
		"build:preview": "vite preview"
	},
	"dependencies": {
		"dialog-polyfill": "^0.5.6",
		"html2canvas": "^1.4.1",
		"vue": "^3.2.37"
	},
	"devDependencies": {
		"@nabla/vite-plugin-eslint": "^1.4.0",
		"@types/node": "18.0.0",
		"@typescript-eslint/eslint-plugin": "^5.30.5",
		"@typescript-eslint/parser": "^5.30.5",
		"@vitejs/plugin-vue": "^2.3.3",
		"@vue/eslint-config-typescript": "^11.0.0",
		"autoprefixer": "^10.4.7",
		"eslint": "^8.19.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-vue": "^9.1.1",
		"husky": "^8.0.1",
		"postcss": "^8.4.14",
		"prettier": "^2.7.1",
		"prettier-plugin-tailwindcss": "^0.1.11",
		"tailwindcss": "^3.1.4",
		"typescript": "^4.7.4",
		"vite": "^2.9.13",
		"vue-eslint-parser": "^9.0.3",
		"vue-tsc": "^0.38.2"
	}
}
