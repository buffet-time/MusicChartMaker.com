{
	"$schema": "https://biomejs.dev/schemas/1.9.2/schema.json",
	"overrides": [
		{
			"include": ["*.vue"]
		}
	],
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			".github/*",
			".husky/*",
			".vscode/*",
			"dist/*",
			"node_modules/*",
			"public/*",
			"testFiles/*",
			".gitignore",
			".nvmrc",
			".pnpmrc",
			"*.md",
			"*.yaml"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded"
		}
	}
}
